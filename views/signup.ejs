<%- include('./partials/header', {title: "signup" }) %>
    <header class="">
        <%- include('./partials/navbar') %>
            <%- include('./partials/hero-section', {pageTitle: "signup" }) %>
    </header>
    <main class="login">
        <section class="p-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="contact-form-inner margin-top-minus-200">
                            <strong class="text-center d-block">Signup</strong>
                            <h2 class="title m-2 text-center">Create Account</h2>
                            <form action="/signup" id="get_in_touch" method="post" class="contact-form signup-form">
                                <div class="form-group mt-3">
                                    <label>First Name</label>
                                    <input type="text" name="firstname" class="form-control p-3">
                                    <div class="errors text-danger"></div>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Last Name</label>
                                    <input type="text" name="lastname" class="form-control p-3">
                                    <div class="errors text-danger"></div>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Emails</label>
                                    <input type="email" name="email" class="form-control p-3">
                                    <div class="errors text-danger"></div>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Password</label>
                                    <input type="password" name="password" class="form-control p-3">
                                    <div class="errors text-danger"></div>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Confirm Password</label>
                                    <input type="password" required name="confirmPassword" class="form-control p-3">
                                </div>
                                <div class="form-group mt-2  text-center">
                                    <button class="btn btn-submit"  type="submit">Sign Up</button>
                                </div>
                                <div class="register-text text-center">
                                    Alreay registered, <a href="/login">sign in now</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>
        <script src="js/main.js"></script>
        </body>


        </html>